extends ../layout

block content
    .container(style='width: 1500px;margin-top: 100px;margin-left: 80px' )
      .row
        .col-lg-10
          h4 게시글 작성
          br
          br
          form(method='POST', action='/freeboards/adds')
            #form-group
              label 제목
              input.form-control(name='title'  placeholder='제목을 입력해주세요.' type='text', required)
            #form-group
              label 내용
              textarea.form-control(name='contents'  placeholder='내용을 입력해주세요.'  cols='100' rows='15', required)
            br
            input.btn.btn-primary(type='submit', value='글 쓰기', style='margin-bottom:5rem')
